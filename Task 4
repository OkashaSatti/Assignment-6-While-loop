#include<iostream>
using namespace std;
int main()
{
    int week;
    int days=1;
    cout<<"Enter the number of weeks (max 3): ";
    cin>>week;
    int i=1;
 if(week > 3)
        {
            cout<<"Invalid number";
        }
 else
 {
      while(i<=week)
      {
        cout<<"Week: "<<i<<endl<<"\t";
        int j=1;
        while(j<=7)
        {
            cout<<"Day: "<<days<<" ";
            days=days+1;
            j++;
        }
        cout<<endl;
        i++;
      }
    }
    cout<<"\nGoodbye!";
    return 0;
}
